<div class="container">

  <img src="assets/image/burger.png">
  <h1>Eat-Da-Burger!</h1>

  <div class="row">
    <div class = "left-card col-lg-6">
      <ul>
      {{#each burgers}}
        {{#unless devoured}}
          <div>
            <div class = "burger">
              {{id}}. {{burger_name}} <br> 
            </div>
            <button class="eat-burger" data-id="{{this.id}}">Devour it</button>
          </div>
        {{/unless}}
      {{/each}}
      </ul>
    </div>
    <div class = "right-card col-lg-6">
      <ul>
        {{#each burgers}}
        {{#if devoured}}
          <div class = "burger-devoured">
            {{burger_name}} <br>
          </div>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

<form class="create-form">

  <div class="form-group">
    <h4>Burger Name:</h4>
    <textarea type="text" id="bn" name="burger-name"></textarea>
  </div>

  <button id = "add" type="submit">Submit</button>
</form>
<h5>Enter the burger you want to eat and click the "Submit" Button</h5>
</div>  
